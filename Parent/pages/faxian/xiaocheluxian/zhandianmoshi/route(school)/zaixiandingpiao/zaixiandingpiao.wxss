.app{
  padding: 20rpx;
}
.header{
  background-color: #fff;
  border-radius: 1em;
  box-shadow: 3rpx 3rpx 1px #e0e0e0;
}
.img_zxdp{
  width:100%;
  height:150rpx;
  border-top-left-radius: 1em;
  border-top-right-radius: 1em;
}
.site {
  display: flex;
  padding: 20rpx;
}
.site image{
  width: 50rpx;
  height: 50rpx;
  
}
.site view{
  height: 50rpx;
  line-height: 50rpx;
}
.container{
  background-color: #fff;
  border-radius: 1em;
  box-shadow: 3rpx 3rpx 1px #e0e0e0;
  margin-top: 50rpx;
  padding: 30rpx;
  color: #909090;
}
.content{
  display: flex;
  border-bottom: 1px solid #e2e2e2;
  height: 120rpx;
}
.content view{
  padding: 30rpx 0;  
  margin-right: 50rpx;
  line-height: 60rpx;
}
.content view:first-child{
  font-size: 30rpx;
  color: #000;
}
.busFrequency{
  border-bottom: 1px solid #e2e2e2;
  height: 250rpx;
}
.busFrequency view:first-child{
  font-size: 30rpx;
  color: #000;
  padding: 30rpx 0;  
}
.week{
  position: relative;
}
.Monday{
  position: absolute;
  left: 0;
}
.Tuesday{
  position: absolute;
  left: 20%;
}
.Wednesday{
  position: absolute;
  left: 40%;
}
.Thursday{
  position: absolute;
  left: 60%;
}
.Friday{
  position: absolute;
  left: 0;
  top: 80rpx;
}
.Saturday{
  position: absolute;
  left: 20%;
  top: 80rpx;
}
.Sunny{
  position: absolute;
  left: 40%;
  top: 80rpx;
}
.date{
  border: 1px solid #e2e2e2;
  padding: 10rpx 20rpx;
  border-radius: 1em;
}
.active{
  background-color: #ebb842;
  color: #fff;
}
button{
  width: 70%;
  background-color: #ebb842;
  margin-top: 50rpx;
  border-radius: 1em;
  color: #fff;
}