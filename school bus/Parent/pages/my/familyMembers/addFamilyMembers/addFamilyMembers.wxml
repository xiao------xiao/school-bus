<view class="page">
      <form bindsubmit="formSubmit">
      <view class="weui-cells weui-cells_form">
          <view class="weui-cell">
            <view class="weui-label">身份</view>
            <input type="text" name="parent" placeholder="请输入身份" auto-focus/>
          </view>
          <view class="weui-cell">
            <view class="weui-label">姓名</view>
            <input type="text" name="name" placeholder="请输入您的姓名" auto-focus/>
          </view>
          <view class="weui-cell">
            <view class="weui-label">手机号码</view>
            <input type="number" name="tel" placeholder="请输入您的手机号码" auto-focus maxlength='11'/>
          </view>
          <button class="weui-btn weui-btn_info"  formType="submit">添加</button>
      </view>
      </form>
  </view>
