page{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  background-color: #fafafa;
}
.app_header{
  background-color: #fbb51a;
}
.sousuo{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  padding-bottom: 30rpx;
}
.sousuo .btn{
  font-size: 14px;
  width: 90%;
  background-color: #fff;
  border-radius: 1em;
  padding: 15rpx 0;
  color: #e2e2e2;
}
.sousuo .btn image{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  padding: 0 20rpx;
  background-color: #fff;
}