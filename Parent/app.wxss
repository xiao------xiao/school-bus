page{
  width: 100%;
  height: 100%;
  font-size: 12px;
  background-color: #fafafa;
}
.header{
  background-color: #fbb51a;
}
.title{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 18px;
}
.sousuo{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  padding-bottom: 30rpx;
}
.sousuo .btn{
  font-size: 14px;
  width: 700rpx;
  background-color: #fff;
  border-radius: 1em;
  padding: 20rpx 0;
  color: #e2e2e2;
}
.sousuo .btn image{
  width: 30rpx;
  height: 30rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
