.tab-wrapper {
  display: flex;
  height: 80rpx;
  width: 100%;
  border-top: 1px solid #e2e2e2;
}

.tab-wrapper image {
  width: 30rpx;
  height: 30rpx;
}

.ms {
  width: 50%;
  position: relative;
}

.ms image {
  position: absolute;
  top: 25rpx;
  left: 100rpx;
}

.ms text {
  position: absolute;
  top: 20rpx;
  left: 150rpx;
}

.left {
  border-right: 1px solid #e2e2e2;
}

.sous {
  display: flex;
  background-color: #f7f7f7;
  width: 85%;
  margin: 20rpx auto;
  padding: 10rpx;
  border-radius: 1em;
}

.sous image {
  width: 30rpx;
  height: 30rpx;
  padding: 12rpx;
}

.sous input {
  font-size: 30rpx;
}

.tab-left, .tab-right {
  color: #e2e2e2;
}

.tab-active {
  color: black;
}

.img-active {
  display: none;
}

.image {
  width: 100%;
  height: 250rpx;
}

.route {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  background-color: #fff;
}

.route image {
  width: 40rpx;
  height: 40rpx;
}

.icon1, .icon2 {
  padding-top: 30rpx;
}

.icon1, .icon2, .route_route, .site {
  margin-left: 3%;
}

.site {
  color: #909090;
}

.route .icon_comein {
  position: absolute;
  right: 3%;
  width: 20rpx;
  height: 20rpx;
  padding-top: 40rpx;
}
