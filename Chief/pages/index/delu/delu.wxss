.logo image{
  width: 100%;
  height: 500rpx;
}
form{
  width: 75%;
  position: absolute;
  top: 400rpx;
  left: 10%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 1em;
}
.input-area{
    background-color: #fff;
    text-align: left;
    padding-left: 10%;
}
.input-area .one{
  position: absolute;
  top: 50rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-area .two{
  position: absolute;
  top: 150rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-area input{
  height:100rpx;
  line-height: 100rpx;
}
#username{
  padding-left: 80rpx;
  border-bottom:1px solid #ddd;
}
#password{
  padding-left: 80rpx;
  border-bottom:1px solid #ddd;
}
.btn-area{width: 80%;margin: 0 auto}
.btn-area button{
    margin-top: 40rpx;
    color: #fff;
    border-radius: 2em;
    background-color: #ff9900;
}
.txt-area{
    margin-top: 30rpx;
    display: flex;
    justify-content:space-between;
}
.forgot-password{color: #888}
.register{color:#ff9900}
.forgot-password:active,.register:active{opacity: 0.7}