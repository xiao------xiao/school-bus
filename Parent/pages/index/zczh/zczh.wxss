.logo image{
  width: 100%;
  height: 500rpx;
}
form{
  width: 75%;
  position: absolute;
  top: 400rpx;
  left: 10%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 1em;
}
.input-area{
    background-color: #fff;
    text-align: left;
    padding-left: 10%;
}
.input-area .one{
  position: absolute;
  top: 50rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-area .two{
  position: absolute;
  top: 150rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-area .third{
  position: absolute;
  top: 250rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-area input{
  height:100rpx;
  line-height: 100rpx;
}
#username,#password{
  padding-left: 80rpx;
  border-bottom:1px solid #ddd;
}
#smsCode{
  padding-left: 80rpx;
}
.btn-area{width: 80%;margin: 0 auto}
.btn-area button{
    margin-top: 40rpx;
    color: #fff;
    border-radius: 2em;
}
.txt-area{
    margin-top: 30rpx;
    display: flex;
    justify-content:space-between;
}
.forgot-password{color: #888}
.register{color:#ff9900}
.forgot-password:active,.register:active{opacity: 0.7}
.smsCode{display: flex;justify-content:space-between;border-bottom: 1px solid #ddd;padding-right: 10%}
.smsCode input{width: 336rpx;}
.smsCode .getSmsCodeBtn{
  font-size: 12px; 
  color:#fff;
  width:70%;
  box-sizing: border-box; 
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}