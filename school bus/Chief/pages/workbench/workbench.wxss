.bus-route{
  position: relative;
  height: 400rpx;
  background-color: #fff;
  margin: 30rpx;
}
.bus-route image:first-child{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
}
.bus-number{
  position: absolute;
  left: 80rpx;
  bottom: 30rpx;
}
.bus-route image:last-child{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.tab-active {
  background-color: #fbb41a;
  color: white;
}
.record{
  background-color: #fff;
  margin: 30rpx;
}
.tab-wrapper{
  display: flex;
}
.tab{
  width: 34%;
  padding: 20rpx 0;
  text-align: center;
}
.smsc{
  background-color: #fbb41a;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  margin-top: 30rpx;
}
.smsc image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}